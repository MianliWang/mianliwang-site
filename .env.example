# Public URL used for metadata and links in local/dev environments.
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional experimental flag for background renderer backend selection.
# Keep this disabled in phase 1 unless WebGPU gate conditions are met.
NEXT_PUBLIC_EXPERIMENTAL_WEBGPU_BACKGROUND=0

# OpenAI key used by /api/translate route handler (server-side only).
OPENAI_API_KEY=

# Optional model override for translation requests.
OPENAI_TRANSLATE_MODEL=gpt-4.1-mini

# Optional input guardrail for /api/translate.
OPENAI_TRANSLATE_MAX_INPUT_CHARS=12000

# AMA storage backend: "file" for local JSON, "upstash" for shared multi-instance storage.
AMA_STORAGE_BACKEND=file

# AMA rate limit backend: "memory" (single instance) or "upstash" (shared).
# If omitted, it follows AMA_STORAGE_BACKEND when that is set to "upstash".
AMA_RATE_LIMIT_BACKEND=memory

# Optional Upstash Redis REST config for AMA shared storage (leave empty locally).
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
AMA_UPSTASH_KEY=ama:messages
AMA_UPSTASH_RATE_PREFIX=ama:rate
