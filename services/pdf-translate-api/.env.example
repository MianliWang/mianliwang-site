# FastAPI service host/port
APP_HOST=0.0.0.0
APP_PORT=8080

# BabelDOC command + runtime settings
BABELDOC_BIN=babeldoc
BABELDOC_TIMEOUT_SECONDS=900
BABELDOC_WORK_ROOT=.tmp/babeldoc-jobs

# Optional extra flags passed directly to BabelDOC command
# Example:
# BABELDOC_EXTRA_ARGS=--translator openai --openai-model gpt-4.1
BABELDOC_EXTRA_ARGS=

# Input guardrails
TRANSLATE_PDF_MAX_BYTES=26214400
TRANSLATE_TEXT_MAX_CHARS=2400
TRANSLATE_LANGUAGE_TOKEN_MAX_LENGTH=16

# Minimal in-memory abuse protection
TRANSLATE_RATE_LIMIT_WINDOW_SECONDS=600
TRANSLATE_RATE_LIMIT_MAX_REQUESTS=4

# Optional OpenAI env pass-through for BabelDOC
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_MODEL=
